<!DOCTYPE html>
<html>
  <head>
    <title>Gmaps</title>

    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "jquery-1.7.1.min" %>
    <%= javascript_include_tag "main" %>
    <%= javascript_include_tag "bootstrap" %>
    <%= javascript_include_tag "http://code.jquery.com/jquery-1.9.1.js" %>
    <%= javascript_include_tag "http://code.jquery.com/ui/1.10.1/jquery-ui.js" %>

    <%= stylesheet_link_tag "bootstrap" %>
    <%= stylesheet_link_tag "bootstrap-responsive" %>
    <%= stylesheet_link_tag "bootstrap.min" %>
    <%= stylesheet_link_tag "bootstrap-responsive.min" %>
    <%= stylesheet_link_tag "style" %>
    <%= stylesheet_link_tag  "application", :media => "all" %>
    <%= stylesheet_link_tag "http://code.jquery.com/ui/1.10.1/themes/base/jquery-ui.css" %>

    <%= csrf_meta_tags %>
    <script type="text/javascript" src="//maps.google.com/maps/api/js?v=3.5&sensor=false&libraries=geometry"></script>
    <script type="text/javascript" src="//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js"></script>
    <script type="text/javascript" src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.5/src/markerclusterer_packed.js"></script>
    <script type="text/javascript" src="//google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js"></script>
    <%= yield :head %>
  </head>


  <body>

    <div class="navbar navbar-fixed-top m-header">
      <div class="navbar-inner m-inner">
        <div class="container-fluid">
          <a class="brand m-brand" href="/">KCart</a>

          <form class="form-search m-search span5">
            <input type="text" placeholder="Type to search" class="span5 search-query">
          </form>

          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <div class="nav-collapse collapse">

            <div class="btn-group pull-right">
              <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="icon-user"></i> <%= current_user.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><i class="icon-off"><%= link_to "Sign out", sign_out_path %></i></li>
              </ul>              
            </div>            
          </div>
        </div>
        <div style="float:right;width:100px;">
        <%= link_to "Sign out", sign_out_path %>
      </div>
      </div>
      
    </div>

  <aside class="sidebar" style="float:left;width:110px;top: 100px;min-height: 585px;">
    <ul class="nav nav-tabs nav-stacked" style="margin-top: 15px;margin-left: 20px;">
      <li class="active">
        <a href="<%= admin_users_path %>">
          <div>
            <div class="ico">
              <img src="/assets/ico-home.png" />
            </div>
            <div class="title">
              Home
            </div>
          </div>          
        </a>
      </li>

      <li class="" style="text-align:center;">
        <div>
          <div class="ico">
            <img src="/assets/ico-setting.gif" />
          </div>
          <div class="title">
            <%= link_to "Accounts", admin_users_path %>
          </div>
        </div>
        <div class="arrow">
          <div class="bubble-arrow-border"></div>
          <div class="bubble-arrow"></div>
        </div>
      </li>

      <li class="" style="text-align:center;">
        <a href="<%= plans_path %>" style="background-color: #F1F1F1;">
          <div>
            <div class="ico">
              <img src="/assets/ico-order.gif" />
            </div>
            <div class="title">
              Plans
            </div>
          </div>
        </a>
      </li>

      <li class="" style="height: 95px;">
        <a href="<%= new_company_admin_users_path %>" style="height: 80px;background-color: #F1F1F1;">
          <div>
            <div class="ico">
              <img src="/assets/ico-add.gif" />
            </div>
            <div class="title">
              Company
            </div>
          </div>
          <div class="arrow">
            <div class="bubble-arrow-border"></div>
            <div class="bubble-arrow"></div>
          </div>
        </a>
      </li>

      <li class="" style="height: 80px;">
        <a href="<%= new_company_user_admin_users_path %>" style="height: 80px;background-color: #F1F1F1;">
          <div>
            <div class="ico">
              <img src="/assets/ico-user.gif" />
            </div>
            <div class="title">
              Company Users
            </div>
          </div>
          <div class="arrow">
            <div class="bubble-arrow-border"></div>
            <div class="bubble-arrow"></div>
          </div>
        </a>
      </li>

    </ul>
  </aside>


  <div class="main-container" style="min-height: 590px;">
    <div class="container-fluid">
      <section>
        <div class="page-header">
          <h1>Dashboard</h1>
        </div>
        <div class="row-fluid">

          <%= flash[:notice] %>
          <%= flash[:error] %>

          <%= yield %>
          <%= yield :scripts %>

      </section>
    </div>
  </div>
</div>


</body>
</html>
