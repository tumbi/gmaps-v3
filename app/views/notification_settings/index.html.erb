<%if @notification_setting.blank?%>

  <%= link_to "create a setting", new_notification_setting_path %>

<%else%>
  <%= form_for @notification_setting do |f| %>
    <%= f.check_box :monthly_reminder %> want to send reminder 1 month before? <br/>
    <%= f.check_box :bimonthly_reminder %> want to send reminder 2 weeks before? <br/>
    <%= f.check_box :weekly_reminder %> want to send reminder 1 week before? <br/>
    <%= f.check_box :oneday_reminder %> want to send reminder if contract is expiring today? <br/>


    <%= f.submit "update" %>
  <%end%>
<%end%>